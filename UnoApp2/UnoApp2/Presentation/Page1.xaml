<Page
    x:Class="UnoApp2.Presentation.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoApp2.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Padding="20" Spacing="10">
            <Button Content="Filled" Style="{ThemeResource FilledButtonStyle}" />
            <Button Content="Elevated" Style="{ThemeResource ElevatedButtonStyle}" />
            <Button Content="Outlined" Style="{ThemeResource OutlinedButtonStyle}" />
            <Button Content="Text" Style="{ThemeResource TextButtonStyle}" />
            <Button Content="Icon" Style="{ThemeResource IconButtonStyle}" />
            <Button Content="FAB" Style="{ThemeResource FabStyle}" />
        </StackPanel>
    </Grid>
</Page>

