<Page x:Class="UnoApp4.Presentation.Login2Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UnoApp4.Presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      d:DataContext="{d:DesignInstance Type=local:Login2Model}"

      xmlns:utu="using:Uno.Toolkit.UI"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <ScrollViewer>
            <StackPanel Spacing="16" MaxWidth="400" HorizontalAlignment="Center">
                <TextBlock
                    Text="Trang tượng trưng, bấm login trực tiếp để vào, không cần login (đã tích hợp login, h phải nhập đi mới login đc)"
                    TextAlignment="Center"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Margin="0,0,0,20" />

                <!-- ERROR MESSAGE -->
                <Border Background="{ThemeResource ErrorAcrylicBrush}"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                        CornerRadius="8"
                        Padding="12">
                    <TextBlock Foreground="{ThemeResource ErrorFillColorPrimaryBrush}"
                               Text="{Binding ErrorMessage}"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap" />
                </Border>

                <TextBox PlaceholderText="Tên đăng nhập"
                         Text="{Binding Username, Mode=TwoWay}"
                         IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />

                <PasswordBox PlaceholderText="Mật khẩu"
                             Password="{Binding Password, Mode=TwoWay}"
                             IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />

                <CheckBox Content="Ghi nhớ đăng nhập"
                          IsChecked="{Binding RememberMe, Mode=TwoWay}"
                          IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />

                <Button Content="Đăng nhập"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                        HorizontalAlignment="Stretch" />

                <ProgressRing IsActive="{Binding IsBusy}"
                              Width="50"
                              Height="50"
                              HorizontalAlignment="Center" />

                <TextBlock
                    Text="{Binding IsBusyStr}"
                    TextAlignment="Center"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Margin="0,0,0,20" />
            </StackPanel>
        </ScrollViewer>

        <!-- SUCCESS DIALOG -->
        <ContentDialog x:Name="SuccessDialog"
                       Title="Đăng nhập thành công!"
                       PrimaryButtonText="Tiếp tục"
                       CloseButtonText="Đóng"
                       DefaultButton="Primary"
                       Visibility="{Binding ShowSuccessDialog, Converter={StaticResource BoolToVisibilityConverter}}"
                       IsPrimaryButtonEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}">
            <TextBlock TextWrapping="Wrap">
                Bạn đã đăng nhập thành công.
                Nhấn Tiếp tục để vào ứng dụng chính.
            </TextBlock>
        </ContentDialog>
    </Grid>
</Page>
