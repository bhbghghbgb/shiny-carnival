<Page
    x:Class="UnoApp3.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoApp3.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:UnoApp3.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="20">
            <TextBlock Text="Chào mừng đến ứng dụng"
                       Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Center"/>

            <Button Command="{Binding GoToProductsCommand}"
                    Content="Xem sản phẩm"
                    HorizontalAlignment="Center"/>

            <Button Command="{Binding GoToCartCommand}"
                    Content="Giỏ hàng"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>

