<Page x:Class="UnoApp3.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UnoApp3.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:UnoApp3.ViewModels"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:LoginViewModel}"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <ScrollViewer>
            <StackPanel Spacing="16" MaxWidth="400" HorizontalAlignment="Center">
                <TextBlock Text="Trang tượng trưng, bấm login trực tiếp để vào, không cần login"
                           TextAlignment="Center"
                           Style="{StaticResource TitleTextBlockStyle}"
                           Margin="0,0,0,20"/>

                <TextBox PlaceholderText="Tên đăng nhập"
                         Text="{Binding Username, Mode=TwoWay}"
                         IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>

                <PasswordBox PlaceholderText="Mật khẩu"
                             Password="{Binding Password, Mode=TwoWay}"
                             IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>

                <CheckBox Content="Ghi nhớ đăng nhập"
                          IsChecked="{Binding RememberMe, Mode=TwoWay}"
                          IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>

                <Button Content="Đăng nhập"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                        HorizontalAlignment="Stretch"/>

                <ProgressRing IsActive="{Binding IsBusy}"
                              Width="50"
                              Height="50"
                              HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
