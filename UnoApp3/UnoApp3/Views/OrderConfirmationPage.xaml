<Page x:Class="UnoApp3.Views.OrderConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:vm="using:UnoApp3.ViewModels"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:OrderConfirmationViewModel}"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <utu:NavigationBar Content="Xác nhận đơn hàng" />

        <!-- Order Confirmation Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Padding="20" Spacing="24">
                <!-- Success Icon -->
                <Border Width="80"
                        Height="80"
                        Background="{ThemeResource SystemAccentColor}"
                        CornerRadius="40"
                        HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE8FB;" FontSize="48" FontFamily="Segoe MDL2 Assets" />

                </Border>

                <!-- Success Message -->
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Đặt hàng thành công!"
                               Style="{StaticResource TitleTextBlockStyle}"
                               TextAlignment="Center"/>
                    <TextBlock Text="Cảm ơn bạn đã đặt hàng"
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>

                <!-- Order Details -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Chi tiết đơn hàng"
                                   Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Mã đơn hàng:"
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding OrderId}"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       FontWeight="SemiBold"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Ngày đặt:"
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding OrderDateFormatted}"
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Tổng tiền:"
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding TotalAmountFormatted}"
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       FontWeight="SemiBold"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Trạng thái:"
                                       Style="{StaticResource BodyTextBlockStyle}"/>
                            <Border Grid.Column="1"
                                    Background="{ThemeResource SystemFillColorSuccess}"
                                    CornerRadius="4"
                                    Padding="4,2">
                                <TextBlock Text="Thành công"
                                           Foreground="White"
                                           Style="{StaticResource CaptionTextBlockStyle}"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Thank You Message -->
                <TextBlock Text="Chúng tôi sẽ liên hệ với bạn trong thời gian sớm nhất để xác nhận đơn hàng. Cảm ơn bạn đã tin tưởng và ủng hộ!"
                           Style="{StaticResource BodyTextBlockStyle}"
                           TextAlignment="Center"
                           TextWrapping="WrapWholeWords"/>

                <!-- Continue Shopping Button -->
                <Button Content="Tiếp tục mua sắm"
                        Command="{Binding ContinueShoppingCommand}"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
